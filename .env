# Komodo Docker Environment Configuration

# Docker image tag
COMPOSE_KOMODO_IMAGE_TAG=latest
COMPOSE_LOGGING_DRIVER=local

# MongoDB credentials
DB_USERNAME=admin
DB_PASSWORD=admin

# Shared passkey for Core and Periphery
PASSKEY=a_random_passkey

# Komodo Core Settings
KOMODO_TITLE=Komodo
KOMODO_FIRST_SERVER=http://periphery:8120
KOMODO_HOST=http://komodod:9120
KOMODO_DISABLE_CONFIRM_DIALOG=false
KOMODO_MONITORING_INTERVAL="15-sec"
KOMODO_RESOURCE_POLL_INTERVAL="5-min"
KOMODO_PASSKEY=${PASSKEY}
KOMODO_WEBHOOK_SECRET=a_random_secret
KOMODO_JWT_SECRET=a_random_jwt_secret
KOMODO_LOCAL_AUTH=true
KOMODO_DISABLE_USER_REGISTRATION=false
KOMODO_ENABLE_NEW_USERS=false
KOMODO_DISABLE_NON_ADMIN_CREATE=false
KOMODO_TRANSPARENT_MODE=false
KOMODO_JWT_TTL="1-day"

# OIDC (Optional, Disabled by Default)
KOMODO_OIDC_ENABLED=false
# KOMODO_OIDC_PROVIDER=
# KOMODO_OIDC_REDIRECT_HOST=
# KOMODO_OIDC_CLIENT_ID=
# KOMODO_OIDC_CLIENT_SECRET=
# KOMODO_OIDC_USE_FULL_EMAIL=true
# KOMODO_OIDC_ADDITIONAL_AUDIENCES=

# GitHub OAuth (Optional)
KOMODO_GITHUB_OAUTH_ENABLED=false
# KOMODO_GITHUB_OAUTH_ID=
# KOMODO_GITHUB_OAUTH_SECRET=

# Google OAuth (Optional)
KOMODO_GOOGLE_OAUTH_ENABLED=false
# KOMODO_GOOGLE_OAUTH_ID=
# KOMODO_GOOGLE_OAUTH_SECRET=

# Cloud Provider Keys (Optional)
KOMODO_AWS_ACCESS_KEY_ID=
KOMODO_AWS_SECRET_ACCESS_KEY=
KOMODO_HETZNER_TOKEN=

# Komodo Periphery Settings
PERIPHERY_PASSKEYS=${PASSKEY}
PERIPHERY_SSL_ENABLED=false
PERIPHERY_INCLUDE_DISK_MOUNTS=/etc/hostname
# PERIPHERY_EXCLUDE_DISK_MOUNTS=/snap,/etc/repos
